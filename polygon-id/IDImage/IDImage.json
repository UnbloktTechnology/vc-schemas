              "DOCUMENT_PAGE_MISSING",
              "DOCUMENT_DAMAGED",
              "REGULATIONS_VIOLATIONS",
              "INCONSISTENT_PROFILE",
              "PROBLEMATIC_APPLICANT_DATA",
              "ADDITIONAL_DOCUMENT_REQUIRED",
